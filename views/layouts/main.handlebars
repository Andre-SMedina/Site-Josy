<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css"
    />
    <link rel="shortcut icon" href="/img/livro-ico.png" />
    <title>Paixão por Leitura</title>
  </head>
  <body>
    <header>
      <img src="/img/livro-ico.png" alt="logo" />
      <a id="linkMain" href="/"><span>Paixão por Leitura</span></a>
      <div class="login">
        {{#if session.userid}}
          <p>Olá {{session.username}}</p>
          <p><a href="/auth/logout">Sair</a></p>
        {{else}}
          <p><a href="/auth/register">Cadastre-se</a></p>
          <p><a href="/auth/login">Login</a></p>
        {{/if}}
      </div>
    </header>
    {{#if session.userid}}
      <section class="resenhas">
        <nav id="menu">
          <ul class="menu_ul1">
            <li>Resenhas
              <ul class="menu_ul2">
                <a href="/resenhas/list"><li>Ver</li></a>
                <a href="/resenhas/create"><li>Criar</li></a>
                <a href="/resenhas/edit"><li>Editar</li></a>
                <a href="/resenhas/delete"><li>Apagar</li></a>
              </ul>
            </li>
            <li>Leituras
              <ul class="menu_ul2">
                <li>Atuais</li>
                <li>Concluídas</li>
                <li>Próximas</li>
              </ul>
            </li>
            <li>Desejos</li>
            <li>Adquiridos</li>
          </ul>
        </nav>
      </section>
    {{/if}}
    <main>
      {{{body}}}
    </main>

    <footer>
      <span>Desenvolvido por André Luís Silva Medina</span>
    </footer>

    <script src="/scripts/main.js"></script>
  </body>
</html>