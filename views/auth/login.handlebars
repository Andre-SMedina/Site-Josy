<section class="cadastro">
  <h2>Login</h2>
  <form action="/auth/login" method="POST">
    <div class="input_div">
      <label>E-mail:</label>
      <input
        type="email"
        name="email"
        placeholder="Digite seu e-mail"
        maxlength="40"
        required
      />
    </div>
    <div class="input_div">
      <label>Senha:</label>
      <input
        type="password"
        name="senha"
        placeholder="Digite sua senha"
        maxlength="15"
        required
      />
    </div>
    <input class="btn" type="submit" value="Entrar" />
    <p class="alerta">{{alert}}</p>
  </form>
</section>