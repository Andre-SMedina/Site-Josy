<section class="cadastro">
  <h2>Cadastro</h2>
  <form action="/auth/register" method="POST">
    <div class="input_div">
      <label>Nome:</label>
      <input
        type="text"
        name="name"
        placeholder="Digite seu nome"
        maxlength="50"
        required
      />
    </div>
    <div class="input_div">
      <label>E-mail:</label>
      <input
        type="email"
        name="email"
        placeholder="Digite seu e-mail"
        maxlength="40"
        required
      />
    </div>
    <div class="input_div">
      <label>Senha:</label>
      <input
        type="password"
        name="senha"
        placeholder="Digite sua senha"
        maxlength="15"
        required
      />
    </div>
    <div class="input_div">
      <label>Confirmar senha: </label>
      <input
        type="password"
        name="senha2"
        placeholder="Digite sua senha novamente"
        maxlength="15"
        required
      />
    </div>
    <input class="btn" type="submit" value="Cadastrar" />
    <p class="alerta">{{alert}}</p>
  </form>
</section>